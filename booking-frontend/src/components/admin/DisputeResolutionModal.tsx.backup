"use client";

import React, { useState, useEffect } from "react";
import { X, Image, FileText, Play } from "lucide-react";

interface Evidence {
  id: string;
  type: "image" | "document" | "video";
  title: string;
  description: string;
  url: string;
  uploadedBy: "guest" | "host" | "admin";
  uploadedAt: string;
}

interface Dispute {
  id: string;
  bookingId: string;
  title: string;
  description: string;
  type: "property_condition" | "misrepresentation" | "cancellation" | "refund_request" | "security_deposit";
