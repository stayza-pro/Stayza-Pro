"use client";

import React, { useState, useEffect } from "react";
import { motion, AnimatePresence } from "framer-motion";
import { useAuth } from "@/context/AuthContext";
import { useBranding } from "@/hooks/useBranding";
import { getRealtorSubdomain } from "@/utils/subdomain";
import { analyticsService } from "@/services/analytics";
import { bookingService } from "@/services/bookings";
import {
  DollarSign,
  TrendingUp,
  Calendar,
  ArrowUp,
  ArrowDown,
  Copy,
  Eye,
  Download,
  CreditCard,
  Wallet,
  PieChart,
  BarChart3,
  Sparkles,
  Clock,
  CheckCircle,
  AlertCircle,
  TrendingDown,
  Loader2,
} from "lucide-react";

export default function RevenuePage() {
  const { user } = useAuth();
  const { branding } = useBranding();
  const realtorSubdomain = getRealtorSubdomain();

  const [timeRange, setTimeRange] = useState<"week" | "month" | "year">(
    "month"
  );
  const [hoveredStat, setHoveredStat] = useState<string | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  // Real-time data states
  const [revenueData, setRevenueData] = useState({
    total: 0,
    thisMonth: 0,
    pending: 0,
    avgPerBooking: 0,
    growth: 0,
  });

  const [monthlyData, setMonthlyData] = useState<
    Array<{
      month: string;
      revenue: number;
      bookings: number;
    }>
  >([]);

  const [transactions, setTransactions] = useState<
    Array<{
      id: string;
      property: string;
      guest: string;
      date: string;
      amount: number;
      status: "completed" | "pending";
    }>
  >([]);

  const brandColors = branding?.colors || {
    primary: "#3B82F6",
    secondary: "#1E40AF",
    accent: "#F59E0B",
  };

  const copyToClipboard = (text: string) => {
    navigator.clipboard.writeText(text);
    alert("Copied to clipboard!");
  };

  // Fetch real-time analytics data
  useEffect(() => {
    fetchRevenueData();
    // Set up auto-refresh every 30 seconds
    const interval = setInterval(fetchRevenueData, 30000);
    return () => clearInterval(interval);
  }, [timeRange]);

  const fetchRevenueData = async () => {
    try {
      setLoading(true);
      setError(null);

      // Fetch realtor analytics
      const analytics = await analyticsService.getRealtorAnalytics(
        timeRange === "week" ? "7d" : timeRange === "month" ? "30d" : "365d"
      );

      // Update revenue stats
      setRevenueData({
        total: analytics.overview.revenue.total || 0,
        thisMonth: analytics.overview.revenue.total || 0,
        pending: 0, // TODO: Add pending payout API
        avgPerBooking: analytics.overview.revenue.average || 0,
        growth: analytics.overview.revenue.growth || 0,
      });

      // Update monthly chart data
      setMonthlyData(
        analytics.trends.monthly.map((item) => ({
          month: item.month,
          revenue: item.revenue,
          bookings: item.bookings,
        }))
      );

      // Fetch recent transactions (from bookings)
      const bookings = await bookingService.getHostBookings();
      const recentTransactions: Array<{
        id: string;
        property: string;
        guest: string;
        date: string;
        amount: number;
        status: "completed" | "pending";
      }> = (Array.isArray(bookings.data) ? bookings.data : [])
        .filter(
          (b: any) => b.status === "CONFIRMED" || b.status === "COMPLETED"
        )
        .slice(0, 5)
        .map((b: any) => ({
          id: b.id as string,
          property: (b.property?.title || "Property") as string,
          guest: (`${b.guest?.firstName || ""} ${
            b.guest?.lastName || ""
          }`.trim() || "Guest") as string,
          date: new Date(b.createdAt).toLocaleDateString("en-US", {
            month: "short",
            day: "numeric",
            year: "numeric",
          }),
          amount: (b.totalPrice || 0) as number,
          status: (b.status === "COMPLETED" ? "completed" : "pending") as
            | "completed"
            | "pending",
        }));

      setTransactions(recentTransactions);
    } catch (err: any) {
      console.error("Error fetching revenue data:", err);
      setError(err.message || "Failed to load revenue data");
      // Show mock data on error for demo
      setRevenueData({
        total: 45680,
        thisMonth: 8340,
        pending: 1200,
        avgPerBooking: 450,
        growth: 12.5,
      });
      setMonthlyData([
        { month: "Jan", revenue: 3200, bookings: 8 },
        { month: "Feb", revenue: 4100, bookings: 10 },
        { month: "Mar", revenue: 3800, bookings: 9 },
        { month: "Apr", revenue: 5200, bookings: 12 },
        { month: "May", revenue: 6100, bookings: 14 },
        { month: "Jun", revenue: 5800, bookings: 13 },
        { month: "Jul", revenue: 7200, bookings: 16 },
        { month: "Aug", revenue: 6900, bookings: 15 },
        { month: "Sep", revenue: 7720, bookings: 17 },
        { month: "Oct", revenue: 8340, bookings: 19 },
      ]);
      setTransactions([
        {
          id: "1",
          property: "Luxury 2BR Apartment",
          guest: "John Smith",
          amount: 450,
          date: "Oct 28, 2025",
          status: "completed",
        },
        {
          id: "2",
          property: "Modern Studio Downtown",
          guest: "Sarah Johnson",
          amount: 380,
          date: "Oct 26, 2025",
          status: "completed",
        },
        {
          id: "3",
          property: "Cozy 1BR Loft",
          guest: "Michael Brown",
          amount: 420,
          date: "Oct 24, 2025",
          status: "pending",
        },
      ]);
    } finally {
      setLoading(false);
    }
  };

  const maxRevenue = Math.max(...monthlyData.map((d) => d.revenue), 1);

  return (
    <div className="min-h-screen bg-gradient-to-br from-gray-50 via-green-50/20 to-blue-50/20 relative">
      {/* Loading Overlay */}
      {loading && (
        <motion.div
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          exit={{ opacity: 0 }}
          className="fixed inset-0 bg-white/80 backdrop-blur-sm z-50 flex items-center justify-center"
        >
          <motion.div
            animate={{ rotate: 360 }}
            transition={{ duration: 1, repeat: Infinity, ease: "linear" }}
            className="relative"
          >
            <div className="absolute inset-0 bg-gradient-to-r from-green-500 to-blue-500 rounded-full blur-xl opacity-40" />
            <Loader2 className="w-16 h-16 text-green-500 relative z-10" />
          </motion.div>
        </motion.div>
      )}
      {/* Animated Header */}
      <motion.div
        initial={{ opacity: 0, y: -20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.6 }}
        className="bg-white/80 backdrop-blur-xl border-b border-gray-200 shadow-sm sticky top-0 z-50"
      >
        <div className="px-8 py-6">
          <div className="flex justify-between items-start">
            <div>
              <motion.h1
                initial={{ opacity: 0, x: -20 }}
                animate={{ opacity: 1, x: 0 }}
                transition={{ delay: 0.2 }}
                className="text-3xl font-bold bg-gradient-to-r from-gray-900 via-green-900 to-blue-900 bg-clip-text text-transparent mb-2"
              >
                Welcome back, {user?.firstName || "User"} ðŸ‘‹
              </motion.h1>
              <motion.div
                initial={{ opacity: 0 }}
                animate={{ opacity: 1 }}
                transition={{ delay: 0.3 }}
                className="flex items-center gap-3"
              >
                <span className="text-gray-600">Your website:</span>
                <div className="relative group">
                  <div className="absolute inset-0 bg-gradient-to-r from-green-400 to-blue-400 rounded-xl blur-lg opacity-20 group-hover:opacity-40 transition-opacity" />
                  <span className="relative inline-flex items-center gap-2 px-4 py-2 bg-white border-2 border-green-200 rounded-xl font-bold text-green-600 shadow-sm">
                    <Sparkles className="w-4 h-4" />
                    {realtorSubdomain || "yourcompany"}.stayza.pro
                  </span>
                </div>
              </motion.div>
            </div>
            <div className="flex items-center gap-3">
              <motion.button
                whileHover={{ scale: 1.05, y: -2 }}
                whileTap={{ scale: 0.95 }}
                onClick={() =>
                  copyToClipboard(
                    `https://${realtorSubdomain || "yourcompany"}.stayza.pro`
                  )
                }
                className="px-5 py-3 border-2 border-gray-200 rounded-xl hover:bg-gray-50 hover:border-gray-300 transition-all flex items-center gap-2 font-bold text-gray-700 shadow-md"
              >
                <Copy className="w-4 h-4" />
                Copy Link
              </motion.button>
              <motion.button
                whileHover={{ scale: 1.05, y: -2 }}
                whileTap={{ scale: 0.95 }}
                onClick={() =>
                  window.open(
                    `https://${realtorSubdomain || "yourcompany"}.stayza.pro`,
                    "_blank"
                  )
                }
                className="relative px-5 py-3 text-white rounded-xl font-bold shadow-lg hover:shadow-xl transition-all flex items-center gap-2 overflow-hidden group"
              >
                <div
                  className="absolute inset-0 bg-gradient-to-r from-green-500 to-blue-500"
                  style={{ backgroundColor: brandColors.primary }}
                />
                <motion.div
                  className="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-20"
                  animate={{ x: ["-100%", "200%"] }}
                  transition={{ duration: 2, repeat: Infinity }}
                />
                <Eye className="w-4 h-4 relative z-10" />
                <span className="relative z-10">Preview Site</span>
              </motion.button>
            </div>
          </div>
        </div>
      </motion.div>

      <div className="p-8">
        {/* Page Title & Actions */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2 }}
          className="flex items-center justify-between mb-8"
        >
          <div>
            <h2 className="text-3xl font-bold text-gray-900 mb-2">
              Revenue & Payouts
            </h2>
            <p className="text-gray-600 font-medium">
              Track your earnings and financial performance
            </p>
          </div>
          <div className="flex items-center gap-3">
            <motion.button
              whileHover={{ scale: 1.05, y: -2 }}
              whileTap={{ scale: 0.95 }}
              className="px-5 py-3 border-2 border-gray-200 rounded-xl hover:bg-gray-50 hover:border-gray-300 transition-all flex items-center gap-2 font-bold text-gray-700 shadow-md"
            >
              <Calendar className="w-5 h-5" />
              This Month
            </motion.button>
            <motion.button
              whileHover={{ scale: 1.05, y: -2 }}
              whileTap={{ scale: 0.95 }}
              className="relative px-5 py-3 text-white rounded-xl font-bold shadow-lg hover:shadow-xl transition-all flex items-center gap-2 overflow-hidden"
            >
              <div className="absolute inset-0 bg-gradient-to-r from-green-500 to-emerald-600" />
              <Download className="w-5 h-5 relative z-10" />
              <span className="relative z-10">Export Report</span>
            </motion.button>
          </div>
        </motion.div>

        {/* Revenue Stats Grid */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.3 }}
          className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8"
        >
          {[
            {
              id: "total",
              label: "Total Revenue",
              value: `$${revenueData.total.toLocaleString()}`,
              change: `+${revenueData.growth}%`,
              trend: "up",
              icon: DollarSign,
              gradient: "from-green-500 to-emerald-600",
              bg: "bg-green-50",
              subtitle: "All time",
            },
            {
              id: "month",
              label: "This Month",
              value: `$${revenueData.thisMonth.toLocaleString()}`,
              change: "+8%",
              trend: "up",
              icon: Calendar,
              gradient: "from-blue-500 to-indigo-600",
              bg: "bg-blue-50",
              subtitle: "October 2025",
            },
            {
              id: "pending",
              label: "Pending Payout",
              value: `$${revenueData.pending.toLocaleString()}`,
              change: "Processing",
              trend: "neutral",
              icon: Clock,
              gradient: "from-amber-500 to-orange-600",
              bg: "bg-amber-50",
              subtitle: "Ready in 2 days",
            },
            {
              id: "average",
              label: "Avg. Per Booking",
              value: `$${revenueData.avgPerBooking}`,
              change: "+5%",
              trend: "up",
              icon: TrendingUp,
              gradient: "from-purple-500 to-pink-600",
              bg: "bg-purple-50",
              subtitle: "Average earnings",
            },
          ].map((stat, index) => {
            const Icon = stat.icon;
            const isHovered = hoveredStat === stat.id;

            return (
              <motion.div
                key={stat.id}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: 0.4 + index * 0.1 }}
                onHoverStart={() => setHoveredStat(stat.id)}
                onHoverEnd={() => setHoveredStat(null)}
                whileHover={{ scale: 1.05, y: -4 }}
                className="relative bg-white rounded-3xl p-6 shadow-lg border-2 border-gray-100 overflow-hidden group cursor-pointer"
              >
                {/* Gradient overlay on hover */}
                <motion.div
                  className={`absolute inset-0 bg-gradient-to-br ${stat.gradient} opacity-0`}
                  animate={{ opacity: isHovered ? 0.05 : 0 }}
                  transition={{ duration: 0.3 }}
                />

                <div className="relative z-10">
                  <div className="flex items-center justify-between mb-4">
                    <motion.div
                      whileHover={{ rotate: 360 }}
                      transition={{ duration: 0.6 }}
                      className={`p-3 rounded-2xl ${stat.bg} shadow-md`}
                    >
                      <Icon
                        className={`w-6 h-6 bg-gradient-to-br ${stat.gradient} bg-clip-text`}
                        style={{
                          color: "transparent",
                          backgroundClip: "text",
                          WebkitBackgroundClip: "text",
                          WebkitTextFillColor: "transparent",
                        }}
                      />
                    </motion.div>
                    {stat.trend === "up" && (
                      <div className="flex items-center gap-1 px-3 py-1 bg-green-50 text-green-700 rounded-full text-xs font-bold">
                        <ArrowUp className="w-3 h-3" />
                        {stat.change}
                      </div>
                    )}
                    {stat.trend === "down" && (
                      <div className="flex items-center gap-1 px-3 py-1 bg-red-50 text-red-700 rounded-full text-xs font-bold">
                        <ArrowDown className="w-3 h-3" />
                        {stat.change}
                      </div>
                    )}
                    {stat.trend === "neutral" && (
                      <div className="px-3 py-1 bg-gray-50 text-gray-700 rounded-full text-xs font-bold">
                        {stat.change}
                      </div>
                    )}
                  </div>
                  <p className="text-sm font-medium text-gray-600 mb-1">
                    {stat.label}
                  </p>
                  <p className="text-3xl font-bold text-gray-900 mb-1">
                    {stat.value}
                  </p>
                  <p className="text-xs text-gray-500">{stat.subtitle}</p>
                </div>

                {/* Hover sparkle */}
                <AnimatePresence>
                  {isHovered && (
                    <motion.div
                      initial={{ opacity: 0, scale: 0, rotate: 0 }}
                      animate={{ opacity: 1, scale: 1, rotate: 360 }}
                      exit={{ opacity: 0, scale: 0 }}
                      transition={{ duration: 0.4 }}
                      className="absolute top-4 right-4"
                    >
                      <Sparkles className="w-4 h-4 text-yellow-400" />
                    </motion.div>
                  )}
                </AnimatePresence>
              </motion.div>
            );
          })}
        </motion.div>

        {/* Revenue Chart */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.6 }}
          className="bg-white rounded-3xl p-6 shadow-lg border-2 border-gray-100 mb-8"
        >
          <div className="flex items-center justify-between mb-6">
            <div className="flex items-center gap-3">
              <div className="p-3 rounded-2xl bg-gradient-to-br from-blue-50 to-purple-50 shadow-md">
                <BarChart3 className="w-6 h-6 text-blue-600" />
              </div>
              <div>
                <h3 className="text-xl font-bold text-gray-900">
                  Revenue Over Time
                </h3>
                <p className="text-sm text-gray-500">
                  Monthly performance trends
                </p>
              </div>
            </div>
            <div className="flex items-center gap-2">
              {["week", "month", "year"].map((range) => (
                <motion.button
                  key={range}
                  whileHover={{ scale: 1.05 }}
                  whileTap={{ scale: 0.95 }}
                  onClick={() => setTimeRange(range as any)}
                  className={`px-4 py-2 text-sm font-bold rounded-xl transition-all ${
                    timeRange === range
                      ? "bg-gradient-to-r from-blue-500 to-purple-500 text-white shadow-lg"
                      : "border-2 border-gray-200 text-gray-700 hover:bg-gray-50"
                  }`}
                >
                  {range.charAt(0).toUpperCase() + range.slice(1)}
                </motion.button>
              ))}
            </div>
          </div>

          {/* Bar Chart */}
          <div className="relative h-80 flex items-end justify-between gap-3 px-4">
            {monthlyData.map((data, index) => {
              const heightPercent = (data.revenue / maxRevenue) * 100;
              return (
                <motion.div
                  key={data.month}
                  initial={{ height: 0, opacity: 0 }}
                  animate={{ height: `${heightPercent}%`, opacity: 1 }}
                  transition={{ delay: 0.8 + index * 0.05, duration: 0.6 }}
                  className="flex-1 group relative cursor-pointer"
                >
                  <motion.div
                    whileHover={{ scale: 1.05, y: -4 }}
                    className="h-full bg-gradient-to-t from-green-500 via-emerald-500 to-green-400 rounded-t-2xl shadow-lg relative overflow-hidden"
                  >
                    {/* Animated shimmer */}
                    <motion.div
                      className="absolute inset-0 bg-gradient-to-t from-transparent via-white to-transparent opacity-20"
                      animate={{ y: ["-100%", "200%"] }}
                      transition={{
                        duration: 2,
                        repeat: Infinity,
                        ease: "linear",
                      }}
                    />

                    {/* Tooltip on hover */}
                    <motion.div
                      initial={{ opacity: 0, y: 10 }}
                      whileHover={{ opacity: 1, y: -10 }}
                      className="absolute -top-16 left-1/2 -translate-x-1/2 bg-gray-900 text-white px-4 py-2 rounded-xl text-sm font-bold whitespace-nowrap shadow-xl opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none z-10"
                    >
                      <div className="text-center">
                        <div className="text-green-400">
                          ${data.revenue.toLocaleString()}
                        </div>
                        <div className="text-xs text-gray-400">
                          {data.bookings} bookings
                        </div>
                      </div>
                      <div className="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-1/2 w-2 h-2 bg-gray-900 rotate-45" />
                    </motion.div>
                  </motion.div>

                  {/* Month label */}
                  <p className="text-xs font-bold text-gray-600 text-center mt-3">
                    {data.month}
                  </p>
                </motion.div>
              );
            })}
          </div>
        </motion.div>

        {/* Recent Transactions */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.8 }}
          className="bg-white rounded-3xl p-6 shadow-lg border-2 border-gray-100"
        >
          <div className="flex items-center justify-between mb-6">
            <div className="flex items-center gap-3">
              <div className="p-3 rounded-2xl bg-gradient-to-br from-purple-50 to-pink-50 shadow-md">
                <CreditCard className="w-6 h-6 text-purple-600" />
              </div>
              <div>
                <h3 className="text-xl font-bold text-gray-900">
                  Recent Transactions
                </h3>
                <p className="text-sm text-gray-500">
                  Latest earnings activity
                </p>
              </div>
            </div>
            <motion.button
              whileHover={{ scale: 1.05, y: -2 }}
              whileTap={{ scale: 0.95 }}
              className="px-4 py-2 border-2 border-gray-200 rounded-xl hover:bg-gray-50 hover:border-gray-300 transition-all flex items-center gap-2 font-bold text-gray-700 shadow-md"
            >
              <Download className="w-4 h-4" />
              Export
            </motion.button>
          </div>

          {/* Transactions List */}
          <div className="space-y-3">
            {transactions.map((transaction, index) => (
              <motion.div
                key={transaction.id}
                initial={{ opacity: 0, x: -20 }}
                animate={{ opacity: 1, x: 0 }}
                transition={{ delay: 0.9 + index * 0.05 }}
                whileHover={{ scale: 1.01, x: 4 }}
                className="flex items-center justify-between p-4 rounded-2xl border-2 border-gray-100 hover:border-gray-200 hover:shadow-md transition-all cursor-pointer"
              >
                <div className="flex items-center gap-4">
                  <div
                    className={`p-3 rounded-xl shadow-md ${
                      transaction.status === "completed"
                        ? "bg-green-50"
                        : "bg-amber-50"
                    }`}
                  >
                    {transaction.status === "completed" ? (
                      <CheckCircle className="w-5 h-5 text-green-600" />
                    ) : (
                      <Clock className="w-5 h-5 text-amber-600" />
                    )}
                  </div>
                  <div>
                    <p className="font-bold text-gray-900">
                      {transaction.property}
                    </p>
                    <p className="text-sm text-gray-600">
                      Guest:{" "}
                      <span className="font-medium">{transaction.guest}</span>
                    </p>
                    <p className="text-xs text-gray-500 mt-1">
                      {transaction.date}
                    </p>
                  </div>
                </div>
                <div className="text-right">
                  <p className="text-2xl font-bold text-green-600">
                    +${transaction.amount}
                  </p>
                  <span
                    className={`inline-block px-3 py-1 rounded-full text-xs font-bold mt-1 ${
                      transaction.status === "completed"
                        ? "bg-green-100 text-green-700"
                        : "bg-amber-100 text-amber-700"
                    }`}
                  >
                    {transaction.status === "completed"
                      ? "Completed"
                      : "Pending"}
                  </span>
                </div>
              </motion.div>
            ))}
          </div>

          {/* View All Button */}
          <motion.button
            whileHover={{ scale: 1.02, y: -2 }}
            whileTap={{ scale: 0.98 }}
            className="w-full mt-6 py-4 border-2 border-gray-200 rounded-xl hover:bg-gray-50 hover:border-gray-300 transition-all font-bold text-gray-700 shadow-md"
          >
            View All Transactions
          </motion.button>
        </motion.div>
      </div>
    </div>
  );
}
