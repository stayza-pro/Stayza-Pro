# Database Configuration
# For optimal performance, add connection pool parameters:
# ?connection_limit=10&pool_timeout=10&connect_timeout=10
DATABASE_URL="postgresql://username:password@localhost:5432/booking_db?connection_limit=10&pool_timeout=10&connect_timeout=10"

# Server Configuration
PORT=5000
NODE_ENV=development
# Force Prisma to use the binary engine (recommended, avoids Node 24+ native binding issues)
PRISMA_CLIENT_ENGINE_TYPE=binary

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Paystack Configuration (for Nigerian/African clients)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration
# Resend (Production - Recommended)
RESEND_API_KEY=re_your_resend_api_key_here

# Must be a valid sender address for your provider (for Resend, use a verified domain/sender).
EMAIL_FROM="Stayza Pro <noreply@stayza.pro>"
EMAIL_WORKER_ENABLED=true
EMAIL_WORKER_INTERVAL_MS=15000
EMAIL_WORKER_BATCH_SIZE=10
EMAIL_WORKER_LOCK_TIMEOUT_MS=120000
EMAIL_MAX_RETRIES=5

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Domain Configuration
MAIN_DOMAIN=stayza.pro
DEV_DOMAIN=localhost:3000
NODE_ENV_DOMAIN=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Booking Configuration
REFUND_WINDOW_HOURS=24
