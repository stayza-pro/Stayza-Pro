# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/booking_db"

# Server Configuration
PORT=5000
NODE_ENV=development
# Force Prisma to use the binary engine (recommended, avoids Node 24+ native binding issues)
PRISMA_CLIENT_ENGINE_TYPE=binary

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration (for foreign clients)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Paystack Configuration (for Nigerian/African clients)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Flutterwave Configuration
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST_your_encryption_key

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration
# Resend (Production - Recommended)
RESEND_API_KEY=re_your_resend_api_key_here
# Fallback SMTP (Development/Backup)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
# Set to true when using implicit TLS (e.g. port 465 with Gmail app passwords)
SMTP_SECURE=false
# Force STARTTLS upgrade on port 587 connections
SMTP_REQUIRE_TLS=true
# Leave true in production; set to false only for local/self-signed certificates
SMTP_TLS_REJECT_UNAUTHORIZED=true
# Milliseconds before giving up on the SMTP socket connection
SMTP_CONNECTION_TIMEOUT=10000
# Gate the startup connection test (enable in staging/production once credentials ready)
SMTP_VERIFY_ON_BOOT=false

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Domain Configuration
MAIN_DOMAIN=stayza.pro
DEV_DOMAIN=localhost:3000
NODE_ENV_DOMAIN=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Booking Configuration
REFUND_WINDOW_HOURS=24